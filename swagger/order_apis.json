  "basePath": "/apis/v1",
  "paths": {
    "/orders": {
      "get": {
        "description": "<p>Order List</p>This will return list of orders placed by the user.><p>The results can be filtered by specifying the status.  The number of items returned can be controlled by providing a 'limit'. By providing the page_hint, the next set of results can be retrieved.</p>",
        "summary": "List of Orders matching criteria",
        "operationId": "Order List",
        "tags": [
          "Order List"
        ],
        "produces": [
          "application/json; charset=utf-8"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/OrderList"
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized access"
          }
        },
        "security": [
          {
            "order_auth": [
              "openid"
            ]
          }
        ],
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "description": "Authorization Bearer Token; if user has signed-in",
            "type": "string",
            "required": false
          },
          {
            "name": "status",
            "in": "query",
            "description": "Order Status",
            "type": "string",
            "required": false
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Number of records to return, by default 10",
            "type": "integer",
            "required": false
          },
          {
            "name": "page_hint",
            "in": "query",
            "description": "An encoded representation of query position pointing to the set of results. Used in conjunction with 'limit' for pagination",
            "type": "string",
            "required": false
          }
        ]
      }
    },

    "/orders/{order_id}": {
      "get": {
        "description": "<p>Order Detail</p> Detailed Listing of Order, given the Order Id",
        "summary": "Order Detail ",
        "operationId": "Order Detail",
        "tags": [
          "Get Order"
        ],
        "produces": [
          "application/json; charset=utf-8"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
                "$ref": "#/definitions/Order"

            }
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized access"
          }
        },
        "security": [
          {
            "order_auth": [
              "openid"
            ]
          }
        ],
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "description": "Authorization Bearer Token; token obtained using grant_type as 'authorization_code' (in case of User authentication) or 'client_credentials' (App credential based authorization)",
            "type": "string",
            "required": false
          },
          {
            "name": "order_id",
            "in": "path",
            "description": "Order identifier",
            "type": "string",
            "required": true
          }

        ]
      }
    }

  },
  "securityDefinitions": {
    "order_auth": {
      "type": "oauth2",
      "authorizationUrl": "https://open-commerce-dev.apigee.net/apis/v1/oauth/authorize?client_id=WckpfFX5CltEq4X3BfGG8NvlA7JOWd75&redirect_uri=https://api.enterprise.apigee.com/v1/o/apis-bank/apimodels/order/templateauths/order_auth/callback&response_type=code&state=af0ifjsldkj&scope=openid&ui-locales=en&acr_values=3",
      "tokenUrl": "https://open-commerce-dev.apigee.net/apis/v1/oauth/token",
      "flow": "accessCode",
      "scopes": {
        "openid": "openID"
      }
    }
